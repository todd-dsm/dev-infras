#!/usr/bin/env bash
#  PURPOSE: syncs work from us to them.
# -----------------------------------------------------------------------------
#     DOCS:
# -----------------------------------------------------------------------------
#  PREREQS: a)
#           b)
#           c)
# -----------------------------------------------------------------------------
#  EXECUTE:
# -----------------------------------------------------------------------------
#     TODO: 1)
#           2)
#           3)
# -----------------------------------------------------------------------------
#   AUTHOR: Todd Thomas
# -----------------------------------------------------------------------------
set -x


###----------------------------------------------------------------------------
### VARIABLES
###----------------------------------------------------------------------------
### Exclusion List
# This will exclude any .directory
declare excList=".*/"

# Data
declare backupDir='/tmp/yo'


###----------------------------------------------------------------------------
### FUNCTIONS
###----------------------------------------------------------------------------
function pMsg() {
    theMessage="$1"
    printf '%s\n' "$theMessage"
}


###----------------------------------------------------------------------------
### Sync everything but the .git directory
###----------------------------------------------------------------------------
pMsg "Syncing source to destination..."
rsync -arv --delete --exclude="$excList" . "$backupDir"


